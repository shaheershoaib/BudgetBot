<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shop"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget"
        android:textSize="50dp"
        android:id="@+id/budget_shop"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bot"
        android:textSize="50dp"
        android:id="@+id/bot_shop"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo_shop">

    </ImageView>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">


        <ImageView
            android:id="@+id/cart_logo"
            android:layout_width="41dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/cart">

        </ImageView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shop_button"
            android:text="SHOP"
            android:width="100dp">
        </Button>


        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="49dp"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/reccommend">

        </ImageView>


        <Button
            android:id="@+id/reccommend_button"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:text="RECCOMEND" />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN OUT"
        android:layout_marginTop="20dp"
        android:id="@+id/signout_shop">

    </Button>

</LinearLayout>